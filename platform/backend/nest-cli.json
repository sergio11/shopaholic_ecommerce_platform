{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      { "include": "i18n/**/*", "watchAssets": true },
      { "include": "env/**/*", "watchAssets": true },
      { "include": "config/**/*", "watchAssets": true }
    ]
  }
}
