datadir="/var/lib/proxysql"

admin_variables=
{
    admin_credentials="admin:admin;radmin:radmin"
    mysql_ifaces="0.0.0.0:6032;0.0.0.0:6033"
    refresh_interval=2000
}

mysql_variables=
{
    threads=4
    max_connections=2048
    default_query_delay=0
    default_query_timeout=36000000
    have_compress=true
    poll_timeout=2000
    interfaces="0.0.0.0:6033;/tmp/proxysql.sock"
    default_schema="information_schema"
    stacksize=1048576
    server_version="5.1.30"
    connect_timeout_server=10000
    monitor_history=60000
    monitor_connect_interval=200000
    monitor_ping_interval=200000
    ping_interval_server_msec=10000
    ping_timeout_server=200
    commands_stats=true
    sessions_sort=true
    monitor_username="monitor"
    monitor_password="monitor"
}

# defines all the MySQL servers
mysql_servers =
(
	{ address="mariadb_master_1" , port=3306 , hostgroup=1, max_replication_lag=5 },
	{ address="mariadb_master_2" , port=3306 , hostgroup=1, max_replication_lag=5 },
	{ address="mariadb_master_3" , port=3306 , hostgroup=1, max_replication_lag=5 },
	{ address="mariadb_slave_1" , port=3306 , hostgroup=2, max_replication_lag=5 },
	{ address="mariadb_slave_2" , port=3306 , hostgroup=2, max_replication_lag=5 },
	{ address="mariadb_slave_3" , port=3306 , hostgroup=2, max_replication_lag=5 }
)

# defines replication hostgroups
mysql_replication_hostgroups=
(
        {
                writer_hostgroup=1
                reader_hostgroup=2
                check_type="read_only"
                comment="mysql dbs"
       }
)

# defines all the MySQL users
mysql_users:
(
	{
	    username="iptv",
	    password="iptv00",
	    active=1,
	    default_hostgroup=1
	}
)

#defines MySQL Query Rules - basic read/write split
mysql_query_rules:
(
	{
		rule_id=150
		active=1
		match_digest="^SELECT"
		destination_hostgroup=2
		apply=1
		comment="Redirect all the SELECT queries to the READ hostgroup"
	},
	{
		rule_id=151
		active=1
		match_digest=".*"
		destination_hostgroup=1
		apply=1
		comment="redirect all other queries to the WRITE hostgroup"
	}
)